@model MentalSelf.Models.ViewModels.TestQuestionViewModel

@{
    ViewData["Title"] = "Level 1 General Symptom Measure Adult";
    ViewData["Message"] = "In the past two weeks, have you experienced any of the following problems?";
}


<h2>@ViewData["Title"]</h2>
<br />
<h4>@ViewData["Message"]</h4>

<table class="table">
    <tbody>
        <tr>
            <td class="col-md-10">
                <form asp-action="Create" id="TestForm">
                    @foreach (var item in Model.QuestionResponse)
                    {
                        <div class="row">
                            @Html.DisplayFor(modelItem => item.Question.QuestionDesc)
                        </div>
                        @*@foreach (var res in Model.Response)
                    {*@
                        <div class="row">
                            <input asp-for="@item.Response.UserResponse" value="0" type="radio" name='@("response" + item.Question.QuestionID)' />
                            Not at all
                        </div>
                        <div class="row">
                            <input asp-for="@item.Response.UserResponse" value="1" type="radio" name='@("response" + item.Question.QuestionID)' /> Rare, less than a couple days
                        </div>
                        <div class="row">
                            <input asp-for="@item.Response.UserResponse" value="2" type="radio" name='@("response" + item.Question.QuestionID)' /> Several Days
                        </div>
                        <div class="row">
                            <input asp-for="@item.Response.UserResponse" value="3" type="radio" name='@("response" + item.Question.QuestionID)' /> More than half the days
                        </div>
                        <div class="row">
                            <input asp-for="@item.Response.UserResponse" value="4" type="radio" name='@("response" + item.Question.QuestionID)' /> Nearly everyday
                        </div>
                        <br />
                        <br />
                        @* } *@
                    }
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
            </form>
            </td>
        </tr>
    </tbody>
</table>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function processForm(e) {
            e.preventDefault();
            console.log(e);
            return false;
        }

        var form = document.getElementById('TestForm');
        form.addEventListener("submit", processForm);
    </script>
}

