@model IEnumerable<MentalSelf.Models.Test>

@{
    ViewData["Title"] = "Select which test you'd like to take";
}
<h2>@ViewData["Title"]</h2>

<table class="table table-hover">
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
            @Html.DisplayFor(modelItem => item.Title) 
            </td>
            <td>
            <a class="btn btn-primary" role="button" asp-action="Create" asp-route-id="@item.TestId">Take the test</a>    
            
            <a class="btn btn-info" role="button" asp-action="Index" asp-route-id="@item.TestId">Previous Tests</a>
            </td>
        </tr>
    }
    </tbody>
</table>
