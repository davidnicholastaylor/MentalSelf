@model MentalSelf.Models.UserTest

@{
    ViewData["Title"] = "Delete";
}


<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            @Html.DisplayFor(model => model.Test.Title)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.DateTaken)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dd>
        <form asp-action="DeleteConfirmed" asp-controller="Tests" asp-route-id="@Model.UserTestId">
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
        </form>
        </dd>
        <br />
        <dd>
        <a class="btn btn-info" role="button" asp-action="Index" asp-route-id="@Model.TestId">Back to List</a>
        </dd>
    </dl>
</div>
